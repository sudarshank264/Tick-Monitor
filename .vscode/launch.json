{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Backend",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npx",
      "runtimeArgs": ["ts-node"],
      "program": "${workspaceFolder}/backend/src/main.ts",
      "preLaunchTask": "tsc: watch - backend/tsconfig.json",
      "envFile": "${workspaceFolder}/backend/.env",
      "sourceMaps": true,
      "restart": true
    }
  ]
}
